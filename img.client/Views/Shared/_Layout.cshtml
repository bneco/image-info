<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Information Retrieval Application | @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <header class="text-center bg-primary">
        <h1>Image Information Retrieval Application</h1>
    </header>
        
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <footer class="text-left bg-primary">
        <p>&copy; @DateTime.Now.Year - Image Information Retrieval Application</p>
    </footer>

</body>
</html>
